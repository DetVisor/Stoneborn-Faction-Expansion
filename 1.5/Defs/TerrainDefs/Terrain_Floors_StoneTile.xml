<Defs>

  <DesignatorDropdownGroupDef>
    <defName>Floor_DwarfTile</defName>
    <label>dwarf tile</label>
  </DesignatorDropdownGroupDef>
    
<TerrainDef Abstract="True" ParentName="FloorBase" Name="DwarfTileBase">
    <renderPrecedence>220</renderPrecedence>
    <description>Roughly-cut stone tiles. These are not beautiful, but they make good surfaces for roads and outdoor walkways. Deconstructing flagstone yields no resources.</description>
    <texturePath>Terrain/Surfaces/DwarfTile</texturePath>
    <pollutionShaderType MayRequire="Ludeon.RimWorld.Biotech">TerrainFadeRoughLinearBurn</pollutionShaderType>
    <pollutionOverlayTexturePath>Terrain/Surfaces/PollutionFloorSmooth</pollutionOverlayTexturePath>
    <pollutionColor>(1, 1, 1, 1)</pollutionColor>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <isPaintable>true</isPaintable>
    <statBases>
      <WorkToBuild>750</WorkToBuild>
      <Beauty>0</Beauty>
      <CleaningTimeFactor>0.9</CleaningTimeFactor>
    </statBases>
    <designatorDropdown>Floor_DwarfTile</designatorDropdown>
    <tags>
      <li>Road</li>
    </tags>
    <uiOrder>2070</uiOrder>
  </TerrainDef>

  <TerrainDef ParentName="DwarfTileBase">
